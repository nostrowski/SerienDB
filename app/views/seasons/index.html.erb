<h1>Staffeln</h1>

<table class="content">
  <tr>
    <th>Name</th>
    <th>Tags</th>
    <th>Besitzer</th>
    <th></th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td><%= season.name %></td>
    <td><font color="<%= (season.users.include?(User.current)?"green":"red") %>"><b>X</b></font></td>
    <td><%= gen_users_fullname_comma_list season.users %></td>
    <td><%= link_to 'Details', season.series %>
  </tr>
<% end %>

</table>
