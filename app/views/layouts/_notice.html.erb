<% if flash[:notice] %>
<tr>
	<td>
		<table class="content notice">
			<tr>
				<th><%=t 'layouts.notice.notice'%></th>
			</tr>
			<tr>
				<td><%= flash[:notice] %></td>
			</tr>
		</table>
	</td>
</tr>
<% end %>

<% if flash[:alert] %>
<tr>
	<td>
		<table class="content error">
			<tr>
				<th><%=t 'layouts.notice.alert'%></th>
			</tr>
			<tr>
				<td><%= flash[:alert] %></td>
			</tr>
		</table>
	</td>
</tr>
<% end %>