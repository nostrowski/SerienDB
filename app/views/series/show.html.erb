<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @series.name %>
</p>

<p>
  <b>Created:</b>
  <%= @series.created_at.to_s(:de) %> (by <%= @series.fullname_of_creator %>)
</p>

<p>
  <b>Edit:</b>
  <%= @series.updated_at.to_s(:de) %> (by <%= @series.fullname_of_editor %>)
</p>

<%= form_tag :controller => "series", :action => "save", :id => @series.id %>

<table>
	<tr>
		<th></th>
		<th>Besitze ich</th>
		<th>andere Besitzer</th>
	</tr>
	
	<% @series.seasons.each do |season| %>
	<tr>
		<td>Staffel <%= season.number %></td>
		<td><%= check_box_tag "s#{season.number}", '0', season.users_fullname.include?(current_user.fullname) %></td>
		<td><% season.users_fullname.each do |user_fullname| %><%= user_fullname + ", " unless user_fullname == current_user.fullname %><% end %></td>
	</tr>
	<% end %>
	
</table>
<%= submit_tag "Speichern" %>
</form>
<%= link_to 'Staffel hinzufügen', :controller => 'series', :action => 'season_add', :id => @series.id, :mothod => 'puts' %><br />
<%= link_to 'Staffel entfernen', :controller => 'series', :action => 'season_remove', :id => @series.id, :mothod => 'puts' %><br />
<!-- Es sollte MUSS noch darauf geprüft werden, ob andere benutzer noch eine Staffel besitzen, bevor sie gelöscht wird -->
<%= link_to 'Edit', edit_series_path(@series) %> |
