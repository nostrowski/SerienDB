<h1>Listing tags</h1>

<table>
  <tr>
    <th>Acronym</th>
    <th>Comment</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.acronym %></td>
    <td><%= tag.comment %></td>
    <td><%= tag.color %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

