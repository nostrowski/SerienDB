<h1>Listing tags</h1>

<table>
  <tr>
    <th>Kürzel</th>
    <th>Kommentar</th>
    <th>Priorität</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><font color="<%= tag.color %>"><%= tag.acronym %></font></td>
    <td><%= tag.comment %></td>
    <td><%= tag.priority %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

