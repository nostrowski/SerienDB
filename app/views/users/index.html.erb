<h1>Listing users</h1>

<table class="content">
  <tr>
    <th>Login</th>
    <th>Password</th>
    <th>Email</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.password %></td>
    <td><%= user.email %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= check_box_tag "admin", '0', user.admin?, :disabled => true %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) if user == User.current || User.current.admin? %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete if User.current.admin? %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path if User.current.admin? %>
