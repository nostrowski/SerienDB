<tr><td><table class="content" id="subtitle"><tr><td>
<h2><%= @user.fullname %></h2>
<% if User.current.admin? || @user == User.current then %><%= link_to 'Bearbeiten', edit_user_path(@user) %><% end %>&nbsp;
</td></tr></table></td></tr>

<tr><td><table class="content"><tr><td>
<p>
  <b>Login-Name:</b>
  <%= @user.login %>
</p>

<p>
  <b>E-Mail Adresse:</b>
  <%= @user.email %>
</p>

<p>
  <b>Vorname:</b>
  <%= @user.firstname %>
</p>

<p>
  <b>Nachname:</b>
  <%= @user.lastname %>
</p>

<p>
  <%= check_box_tag "admin", '0', @user.admin?, :disabled => true %>
  <b>Admin?</b>
</p>

<p>
  <%= check_box_tag "admin", '0', @user.replace_uncomplete_x?, :disabled => true %>
  <b>Bei unvollständigen Serien '<font color="orange">X</font>' durch höchste Staffel ersetzen</b>
</p>

<p>
  <%= check_box_tag "admin", '0', @user.replace_complete_x?, :disabled => true %>
  <b>Bei vollständigen Serien '<font color="green">X</font>' durch höchste Staffel ersetzen</b>
</p>

<p>
  <b>Standart Filter Relation:</b>
  <%= if @user.filterrelation == "and" then "UND" else "ODER" end %>
</p>
</td></tr></table></td></tr>
