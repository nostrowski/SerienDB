<% if @user.errors.any? %>
<tr><td><table class="content error">
  <tr><th><%= @user.errors.count %> Fehler aufgetreten</th></tr>
  <tr><td>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </td></tr>
</table></td></tr>
<% end %>

<tr><td><table class="content"><tr><td>
<%= form_for(@user) do |f| %>
  <% if @user == User.current || User.current.admin? then %>
  
  <div class="field">
    <%= f.label 'Loginname' %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label "Passwort" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label "Passwort wiederholen" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label "Mailadresse" %><br />
    <%= f.text_field :email %>
  </div>
  
  <% if User.current.admin? then %>
  
  <div class="field">
    <%= f.label 'Vorname' %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label 'Nachname' %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
  	<%= f.check_box :is_admin %>
    <%= f.label 'Admin?' %>
  </div>
  
  <% end %>
  	
  <div class="field">
  	<%= f.check_box :replace_uncomplete_x %>
    Bei unvollständigen Serien '<font color="orange"><b>X</b></font>' durch höchste Staffel ersetzen
  </div>
  <div class="field">
  	<%= f.check_box :replace_complete_x %>
    Bei vollständigen Serien '<font color="green"><b>X</b></font>' durch höchste Staffel ersetzen
  </div>
  
  <div class="field">
  	Standart Filter Relation:
  	<%= f.radio_button :filterrelation, :and %>UND
  	<%= f.radio_button :filterrelation, :or %>ODER
  </div>
  
  <div class="field">
  	<fieldset>
  		<legend>Angezeigte Spalten in Serienübersicht</legend>
  		<%= f.check_box :show_ser_col_complete %>&nbsp;Komplettbesitzer<br />
  		<%= f.check_box :show_ser_col_uncomplete %>&nbsp;Teilbesitzer<br />
  		<%= f.check_box :show_ser_col_seasoncount %>&nbsp;Anzahl Staffeln<br />
  		<%= f.check_box :show_ser_col_episodecount %>&nbsp;Anzahl Episoden<br />
  	</fieldset>
  </div>
  
  <div class="field">
  	<fieldset>
  		<legend>Angezeigte Spalten in Staffelübersicht</legend>
  		<%= f.check_box :show_sea_col_owner %>&nbsp;Besitzer<br />
  		<%= f.check_box :show_sea_col_episodecount %>&nbsp;Anzahl Episoden<br />
  	</fieldset>
  </div>
  
  <div class="actions">
    <%= f.submit 'Speichern' %>
  </div>
  
  <% end %>
<% end %>
</td></tr></table></td></tr>